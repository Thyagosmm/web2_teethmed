<title>Alterando Dados</title>
<form action="/alterar_usuario" method="POST">
  <input type="hidden" id="login" name="login" value="<%= usuario.login %>">
  <label for="nome">Nome do Usuário:</label><br>
  <input type="text" id="nome" name="nome" value="<%= usuario.nome %>"><br>
  <label for="perfil">Perfil do Usuário:</label><br>
  <input type="text" id="perfil" name="perfil" value="<%= usuario.perfil %>"><br>
  <input type="submit" value="Salvar Alterações">
</form>